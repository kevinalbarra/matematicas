var portalinscripcionprelinea=function(ins_linea){
    modalPortal.find('[name=tituloModal]').html('Por favor seleccione sede');
	if(ins_linea=="pregrado" || ins_linea=="pregrados"){
	    modalPortal.find('[name=linkBa]').val('https://portal.unisimon.edu.co/matricula/index.php/?tipo=pregrado');
	}else{
	    modalPortal.find('[name=linkBa]').val('https://portal.unisimon.edu.co/inscripcion/?niv=' + ins_linea);
	}
    modalPortal.find('[name=tipoBa]').val('_blank');
    modalPortal.find('[name=linkCu]').val('http://matricula.unisimoncucuta.edu.co/websiaa/modulos/aspirantes/');
    modalPortal.find('[name=tipoCu]').val('_blank');
    
    modalPortal.modal();
};



